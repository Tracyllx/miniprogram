/* pages/direct_train/specialHomePage/specialHomePage.wxss */
page {
    width: 100%;
    height: 100%;
}

.specialHomePage {
    width: 100%;
    height: 100%;
    background: #eee;
}

/*展示搜索框和我的最大div*/

.show_search {
    width: 100%;
    height: 100rpx;
    text-align: center;
    overflow: hidden;
    background: #efeff4;
}

.show_search_result_div {
    width: 100%;
    /*margin-left: 4%;*/
    display: none;
    height: 100%;
    position: absolute;
    z-index: 33;
    background: rgba(255, 255, 255, 0.95);
    top: 7.5%;
}

.search_result_list {
    width: 100%;
    overflow: hidden;
}

.search_result_list>li {
    width: 100%;
    height: 88rpx;
    font-size: 48rpx;
    line-height: 88rpx;
    padding-left: 4%;
    border-bottom: 1px solid #666;
}

/*搜索框大div下的每个div设置*/

.show_search>div {
    float: left;
}

/*左边展示搜索框和小图标*/

.input_to_search {
    width: 83%;
    height: 70%;
    margin-left: 4%;
    margin-right: 1%;
    border-radius: 20rpx;
    margin-top: 2.05%;
    float: left;
    overflow: hidden;
}

/*展示搜索小图标*/

.show_search_img {
    width: 15%;
    height: 100%;
    float: left;
    line-height: 63rpx;
    background: #fff;
}

/*搜索的图标大小*/

.show_search_img>image {
    width: 40rpx;
    height: 40rpx;
    padding-top: 4rpx;
    vertical-align: middle;
}

/*展示input框的*/

.show_search_input {
    width: 80%;
    float: left;
    height: 100%;
    padding-left: 5%;
    background: #fff;
}

.show_search_input>input {
    width: 100%;
    height: 100%;
    border: none;
    outline: none;
    font-size: 26rpx;
    text-align: left;
}

/*展示我的*/

.show_to_meself {
    width: 12%;
    height: 100%;
    float: left;
}

.show_to_meself>image {
    width: 44rpx;
    height: 42rpx;
    margin-top: 30rpx;
    vertical-align: middle;
}

/* 数据列表 */

.data-list {
    position: absolute;
    top: 100rpx;
    left: 0;
    right: 0;
    bottom: 0;
}

.data-list>scroll-view {
    width: 100%;
    height: 100%;
}

.list-item {
    width: 100%;
    height: auto;
    background: #fff;
    overflow: hidden;
    margin-bottom: 3%;
}

/* 查看所有 */

.list-show-all {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}

/* 标题 */

.show-title {
    padding: 14rpx 3% 0;
    display: flex;
    display: -webkit-flex;
}

.show-title-txt {
    flex: 1;
    font-size: 30rpx;
}

.show-title-distance {
    flex: 0 0 240rpx;
    font-size: 30rpx;
    text-align: right;
}

.show-title-distance>image {
    width: 22rpx;
    height: 25rpx;
    margin-right: 3%;
}

.distance-num {
    color: #01827d;
}

/*展示星星图标*/

.show-start {
    padding: 0 3% 14rpx;
    border-bottom: 1rpx solid #cdcdcd;
}

.show-start>image {
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-right: 5rpx;
}

/*展示打分*/

.shownumber {
    margin-left: 6%;
    color: #01827d;
    font-size: 27rpx;
    display: inline-block;
}

/* 子列表 */

.show-items {
    
}

.items-box {
    height: 200rpx;
    padding: 24rpx 3%;
    background: #fff;
    overflow: hidden;
    border-bottom: 1rpx solid #cdcdcd;
    display: flex;
    display: -webkit-flex;
    position: relative;
}

.items-img {
    flex: 0 0 200rpx;
    height: 100%;
    background: #ddd;
}

.items-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.items-content {
    flex: 1;
    height: 100%;
    padding-left: 24rpx;
    position: relative;
}

.items-title {
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.items-desc {
    width: 80%;
    height: 80rpx;
    line-height: 40rpx;
    padding-top: 10rpx;
    font-size: 24rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.items-price {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #FF6804;
    position: absolute;
    bottom: 0;
    left: 24rpx;
}

.shell {
    font-size: 26rpx;
    margin-left: 5%;
    color: #656565;
}

.items-btn {
    width: 16%;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    border-radius: 10rpx;
    background: #01827d;
    position: absolute;
    bottom: 24rpx;
    right: 3%;
}

.no-bt-border {
    border-bottom: 0;
}

/* 没有更多数据了 */

.nonedata {
    width: 100%;
    text-align: center;
    color: #999;
    line-height: 70rpx;
    height: 70rpx;
    font-size: 27rpx;
}