page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

/* 轮播图 */

.swiper-box {
    width: 100%;
    height: 370rpx;
    overflow: hidden;
}

.swiper-img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 主营业务大view */

.business {
    width: 100%;
    height: auto;
}

.kk-mt20 {
    margin-top: 20rpx;
}

/* 居中 */

.shanshowBusiness {
    width: 12.5%;
    height: 230rpx;
    float: left;
    text-align: center;
    margin: 0 auto;
}

/* 主营业务带阴影 */

.box-shadow {
    width: 100%;
    background: #fff;
    /* box-shadow: 0 0 40rpx rgba(1, 130, 125, 0.14); */
    overflow: hidden;
}

.kk-box {
    width: 94%;
    padding: 16rpx 3%;
}

/* scroll-x左右滑动 */

.shan-scroll-x {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    height: 220rpx;
}

/* 展示主营业务的每一个 */

.part-of-business {
    width: 25%;
    height: 130rpx;
    padding: 20rpx 0;
    display: inline-block;
    text-align: center;
    margin: 0 auto;
}

/* 业务的图片 */

.business-icon {
    width: 90rpx;
    height: 90rpx;
    margin: 0 auto;
}

.business-icon>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 业务名称 */

.business-title {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    margin-top: 6rpx;
}

/*展示滑动时左边右边两页*/

.point {
    width: 100%;
    height: 30rpx;
    background: #fff;
}

/*小点的内容*/

.all-point {
    width: 80rpx;
    margin: 0 auto;
    height: 18rpx;
    overflow: hidden;
}

.shan-point {
    margin-left: 15rpx;
    width: 18rpx;
    height: 18rpx;
    background: #c1e6d9;
    border-radius: 18rpx;
    float: left;
}

.pointActive {
    background: #6ed0ad;
}

/* 热门推荐文字 */

.show-hot-scenic {
    margin-top: 16rpx;
    height: 80rpx;
    padding-left: 3%;
    line-height: 80rpx;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

/* 热门部分 */

.part-of-hot {
    width: 45.5%;
    height: 270rpx;
    padding-left: 3%;
    float: left;
}

/* 热门推荐图片 */

.part-of-hot image {
    width: 100%;
    height: 170rpx;
}

/* 票的介绍 */

.ticket-introduce {
    height: 70rpx;
    line-height: 35rpx;
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

/* 距离底部 */

.marginbottom {
    margin-bottom: 30rpx;
}

/* 滚动条 */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.noneDisplay {
    display: none;
}

