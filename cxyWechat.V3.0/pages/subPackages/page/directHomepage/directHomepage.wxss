page {
    width: 100%;
    height: 100%;
}

.directhomepage {
    width: 100%;
    height: 100%;
    background: #eee;
    margin: 0;
    padding: 0;
}

/*展示搜索框和我的最大div*/

.show_search {
    width: 100%;
    height: 100rpx;
    text-align: center;
    overflow: hidden;
    background: #efeff4;
}

.show_search_result_div {
    width: 100%;
    /*margin-left: 4%;*/
    display: none;
    height: 100%;
    position: absolute;
    z-index: 33;
    background: rgba(255, 255, 255, 0.95);
    top: 7.5%;
}

.search_result_list {
    width: 100%;
    overflow: hidden;
}

.search_result_list>li {
    width: 100%;
    height: 88rpx;
    font-size: 48rpx;
    line-height: 88rpx;
    padding-left: 4%;
    border-bottom: 1px solid #666;
}

/*搜索框大div下的每个div设置*/

.show_search>div {
    float: left;
}

/*左边展示搜索框和小图标*/

.input_to_search {
    width: 83%;
    height: 70%;
    margin-left: 4%;
    margin-right: 1%;
    border-radius: 20rpx;
    margin-top: 2.05%;
    float: left;
    overflow: hidden;
}

/*展示搜索小图标*/

.show_search_img {
    width: 15%;
    height: 100%;
    float: left;
    line-height: 63rpx;
    background: #fff;
}

/*搜索的图标大小*/

.show_search_img image {
    width: 40rpx;
    height: 40rpx;
    padding-top: 4rpx;
    vertical-align: middle;
}

/*展示input框的*/

.show_search_input {
    width: 80%;
    float: left;
    height: 100%;
    padding-left: 5%;
    background: #fff;
}

.show_search_input>input {
    width: 100%;
    height: 100%;
    border: none;
    outline: none;
    font-size: 26rpx;
    text-align: left;
}

/*展示我的*/

.show_to_meself {
    width: 12%;
    height: 100%;
    float: left;
}

.show_to_meself>image {
    width: 44rpx;
    height: 42rpx;
    margin-top: 30rpx;
    vertical-align: middle;
}

/* 展示列表最大div */

.showList {
    position: absolute;
    top: 100rpx;
    left: 0;
    right: 0;
    bottom: 0;
}

.showList>scroll-view {
    width: 100%;
    height: 100%;
}

/*展示一个区的票的种类*/

.show_one_all {
    width: 100%;
    height: auto;
    background: #fff;
    overflow: hidden;
    margin-bottom: 3%;
}

/*展示头部景区相应信息*/

.show_scenic_title {
    width: 100%;
    height: 120rpx;
    border: 1px solid #cdcdcd;
}

.show_scenic_start {
    width: 100%;
    overflow: hidden;
    border-bottom: 1px solid #666;
}

/*展示景区的名字*/

.show_scenic_name {
    /* width: 100%; */
    height: 60rpx;
    padding-top: 10rpx;
    line-height: 55rpx;
    overflow: hidden;
    padding-left: 24rpx;
    padding-right: 24rpx;
    display: flex;
}

.show_scenic_name>view {
    height: 100%;
    float: left;
}

.show_title_scenic_name {
    /* width: 54%; */
    flex: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.show_distance_about_there {
    flex: 0 0 240rpx;
    /* width: 40%; *//* padding-right: 48rpx; */
}

/*展示景区名称*/

.show_title_scenic_name {
    font-size: 30rpx;
    text-align: left;
    /* padding-left: 24rpx; */
}

/*展示位置*/

.show_distance_about_there {
    /* padding-right: 20rpx; */
    text-align: right;
    font-size: 30rpx;
}

/*展示位置的小图标*/

.show_distance_about_there>image {
    width: 22rpx;
    height: 25rpx;
    margin-right: 3%;
}

/*展示距离有多远*/

.show_where {
    color: #01827d;
}

/*展示星星和距离多少米*/

.show_good_and_distance {
    width: 100%;
    height: 50rpx;
    line-height: 30rpx;
    overflow: hidden;
    display: block;
    padding-left: 24rpx;
    border-bottom: 1px #999 solid;
}

/*展示星星和距离下每一个div*/

.show_good_and_distance>div {
    height: 100%;
    float: left;
    width: 48%;
    overflow: hidden;
}

/*展示星星图标*/

.show_start>image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 5rpx;
}

/*展示打分*/

.shownumber {
    margin-left: 6%;
    color: #01827d;
    font-size: 27rpx;
    display: inline-block;
}

/*展示地址和千米的距离*/

.address {
    margin-left: 20rpx;
    color: #666;
    font-size: 28rpx;
}

.showdisplayinline {
    margin-left: 4%;
}

/*展示列表*/

.show_list, .show_list>ul {
    width: 100%;
    height: auto;
    overflow: hidden;
}

/*ul下的li*/

.showli {
    width: 100%;
    height: 200rpx;
    display: block;
}

/*li下的展示大的div*/

.show_detail_list {
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
    padding-top: 34rpx;
    padding-bottom: 28rpx;
    overflow: hidden;
    border-bottom: 1px solid #cdcdcd;
}

/*左右两边div的设置*/

.show_detail_list>view {
    height: 100%;
    float: left;
}

/*展示图片区域*/

.show_li_img {
    width: 25%;
    padding-left: 24rpx;
}

/*图片的设置*/

.show_li_img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/*左边最大的div*/

.shan_show_content {
    width: 68%;
    padding-left: 3%;
}

/*展示内容部分*/

.show_this_ticket_content {
    width: 96%;
    height: 60%;
    font-size: 28rpx;
    display: -webkit-box;
    display: -moz-box;
    -moz-box-orient: vertical;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    padding-right: 24rpx;
    overflow: hidden;
    line-height: 40rpx;
}

.shan:after {
    width: 0;
    height: 100%;
    display: inline-block;
    content: "";
    vertical-align: middle;
}

/*展示现在门票价格*/

.show_ticket_money {
    width: 100%;
    height: 40%;
    padding-top: 12rpx;
}

/*现在的价格*/

.now_price {
    font-size: 34rpx;
    color: #01827d;
    float: left;
    width: 19%;
    height: 100%;
}

/*门市的价格*/

.bygone_price {
    font-size: 24rpx;
    color: #666;
    float: left;
    width: 16%;
    height: 100%;
}

/*展示已售*/

.show_all_sale {
    float: left;
    color: #7f7f7f;
    text-align: left;
    width: 31%;
    height: 100%;
    font-size: 26rpx;
    padding-top: 4rpx;
}

/*展示预定按钮*/

.to_sale {
    border: none;
    outline: none;
    background: #01827d;
    color: #fff;
    width: 26%;
    height: 100%;
    font-size: 28rpx;
    line-height: 56rpx;
    border-radius: 12rpx;
}

/* 展示查看其它产品 */

.show_more_detail {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    text-align: center;
    border-bottom: 1px solid #cdcdcd;
}

/* 查看其它产品的image设置 */

.show_more_detail>image {
    width: 25rpx;
    height: 16rpx;
    margin-left: 5rpx;
}

/* 其它多少个产品数量距离文字多远 */

.showothernumber {
    margin-left: 10rpx;
    margin-right: 10rpx;
}

/* 展示搜索结果最大view */

.show_search_result_div {
    width: 100%;
    display: none;
    height: 100%;
    position: absolute;
    z-index: 33;
    background: rgba(255, 255, 255, 0.95);
    top: 0%;
}

.show-search-list {
    width: 100%;
    height: 100%;
}

/* 展示结果集 */

.search_result_list {
    width: 100%;
    overflow: hidden;
}

.search_result_list>li {
    width: 96%;
    height: 80rpx;
    display: block;
    font-size: 28rpx;
    line-height: 80rpx;
    padding-left: 4%;
    border-bottom: 1px solid #cdcdcd;
}

/* 搜索的时候返回首页 */

.show_to_homepage {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #999;
    font-size: 28rpx;
}

/* 搜索没有数据的时候显示 */

.show_none_data {
    position: absolute;
    top: 100rpx;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 33;
    display: block;
}

.show_none_data>view {
    line-height: 100rpx;
    text-align: center;
    color: #999;
    font-size: 26rpx;
}

/* 是否显示出来 */

.ticketList>.display {
    display: block;
}

.nonedisplay {
    display: none;
}

.shandisplay {
    display: block;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

/* 没有更多数据了 */

.nonedata {
    width: 100%;
    text-align: center;
    color: #999;
    line-height: 70rpx;
    height: 70rpx;
    font-size: 27rpx;
}
