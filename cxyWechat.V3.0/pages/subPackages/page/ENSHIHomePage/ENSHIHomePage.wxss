page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

/* 轮播图 */

.swiper-box {
    width: 100%;
    height: 370rpx;
    overflow: hidden;
}

.swiper-img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 产品列表 */

.product-list {
    width: 94%;
    height: auto;
    margin: 24rpx auto 16rpx;
    overflow: hidden;
}

.product-item {
    width: 100%;
    height: auto;
    margin-bottom: 16rpx;
    overflow: hidden;
    background-color: #fff;
}

.product-item-img {
    width: 100%;
    height: 360rpx;
    overflow: hidden;
}

.product-item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.product-item-txt {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
}

.product-item-title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #333;
}

.product-item-tip {
    font-size: 26rpx;
    color: #333;
}

.product-item-price {
    float: right;
    font-size: 36rpx;
    color: #f60;
}

/* 攻略 */

.strategy-box {
    width: 94%;
    height: 180rpx;
    margin: 0 auto;
    padding-bottom: 16rpx;
    overflow: hidden;
}

.strategy-box>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}
