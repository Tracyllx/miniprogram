page {
    width: 100%;
    height: 100%;
}

/* 头部定位、搜索 */

.top-bar {
    height: 100rpx;
    overflow: hidden;
    display: flex;
    display: -webkit-flex;
    background-color: #fff;
}

.address-box {
    width: 120rpx;
    padding-top: 10rpx;
    font-size: 26rpx;
    text-align: center;
}

.address-box>image {
    width: 27rpx;
    height: 15rpx;
    vertical-align: middle;
    margin-left: 12rpx;
}

.search-bar {
    flex: 1;
    margin: 14rpx 24rpx;
    padding: 5rpx 14rpx;
    border-radius: 10rpx;
    border: 1rpx solid #d1d1d1;
    display: flex;
    display: -webkit-flex;
}

.search-icon {
    width: auto;
    height: 100%;
}

.search-icon>image {
    width: 37rpx;
    height: 36rpx;
    vertical-align: middle;
    margin-right: 12rpx;
}

.search-input {
    flex: 1;
    padding-top: 10rpx;
    font-size: 28rpx;
    color: #999;
}

.search-input>input {
    width: 100%;
    height: 100%;
    border: 0;
    outline: none;
    font-size: 28rpx;
    color: #333;
}

/* 中间内容 */

.content-view {
    position: absolute;
    top: 100rpx;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
    background-color: #fff;
}

/* 主要业务 */

.main-view {
    width: 100%;
    height: 776rpx;
    overflow: hidden;
    position: relative;
}

.main-item {
    position: absolute;
    overflow: hidden;
}

.main-item-in {
    width: 100%;
    height: 100%;
    position: relative;
}

.main-bg {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.main-item-box {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
}

.main-txt {
    font-size: 50rpx;
    color: #fff;
}

/* 游 */

.tourism-box {
    top: 0;
    left: 0;
    width: 79%;
    height: 20%;
    border-bottom-right-radius: 10rpx;
}

.tourism-icon {
    width: 71rpx;
    height: 69rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -10rpx;
}

/* 住 */

.live-box {
    bottom: 0;
    left: 0;
    width: 20%;
    height: 79%;
    border-top-right-radius: 10rpx;
}

.live-icon {
    width: 83rpx;
    height: 69rpx;
    vertical-align: middle;
}

/* 购 */

.buy-box {
    top: 0;
    right: 0;
    width: 20%;
    height: 79%;
    border-bottom-left-radius: 10rpx;
}

.buy-icon {
    width: 63rpx;
    height: 69rpx;
    vertical-align: middle;
}

/* 吃 */

.eat-box {
    bottom: 0;
    right: 0;
    width: 79%;
    height: 20%;
    border-top-left-radius: 10rpx;
}

.eat-icon {
    width: 93rpx;
    height: 69rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -10rpx;
}

/* 行 */

.traffic-box {
    top: 50.4%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 57%;
    height: 57%;
    border-radius: 10rpx;
}

.traffic-icon {
    width: 83rpx;
    height: 69rpx;
    vertical-align: middle;
}

/* 广告栏 */

.ad-view {
    width: 100%;
    height: 200rpx;
    padding: 16rpx 0;
    overflow: hidden;
    background-color: #fff;
}

.ad-view>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 广告栏：轮播图 */

.swiper-box {
    width: 100%;
    height: 200rpx;
    padding: 16rpx 0 16rpx;
    overflow: hidden;
    background-color: #fff;
}

.swiper-img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* 订制、攻略 */

.other-view {
    width: 100%;
    height: 120rpx;
    overflow: hidden;
    display: flex;
    display: -webkit-flex;
    background-color: #fff;
}

.customMade-box {
    width: 61.8%;
    text-align: center;
    background-color: #58bbb8;
    position: relative;
}

.strategy-box {
    flex: 1;
    margin-left: 8rpx;
    text-align: center;
    background-color: #65abbd;
    position: relative;
}

.customMade-icon {
    width: 70rpx;
    height: 57rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.strategy-icon {
    width: 43rpx;
    height: 57rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.other-txt {
    font-size: 24rpx;
    color: #fff;
}

.other2-txt {
    font-size: 28rpx;
    color: #fff;
    display: inline-block;
}

/* 公共的定位居中样式 */

.transform-middle {
    width: auto;
    height: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
}

/* 战略合作 */

.cooperation-view {
    width: 100%;
    height: auto;
    padding: 16rpx 0;
    overflow: hidden;
}

.cooperation-name {
    padding: 16rpx 24rpx;
    height: 60rpx;
    line-height: 68rpx;
    font-size: 34rpx;
    color: #333;
}

.cooperation-list {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.cooperation-item {
    float: left;
    width: 49.5%;
    height: 220rpx;
    margin-bottom: 8rpx;
    overflow: hidden;
    position: relative;
}

.cooperation-mr {
    margin-right: 1%;
}

.cooperation-item>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.cooperation-item-txt {
    position: absolute;
    top: 10rpx;
    bottom: 0;
    width: 100%;
    text-align: center;
    letter-spacing: 3rpx;
    font-size: 38rpx;
    color: #fff;
}
