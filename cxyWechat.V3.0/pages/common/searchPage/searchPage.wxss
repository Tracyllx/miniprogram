page {
    width: 100%;
    height: 100%;
}

.the-top {
    width: 100%;
    height: 100rpx;
    display: flex;
    display: -webkit-flex;
}

.search-bar {
    flex: 1;
    margin: 14rpx 24rpx;
    padding: 5rpx 14rpx;
    border-radius: 10rpx;
    border: 1rpx solid #d1d1d1;
    display: flex;
    display: -webkit-flex;
}

.search-icon {
    width: auto;
    height: 100%;
}

.search-icon>image {
    width: 37rpx;
    height: 36rpx;
    vertical-align: middle;
    margin-right: 12rpx;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #999;
}

.search-input>input {
    width: 100%;
    height: 100%;
    border: 0;
    outline: none;
    font-size: 28rpx;
    color: #333;
}

.result-list {
    position: absolute;
    top: 120rpx;
    bottom: 0;
    width: 100%;
}

.list-item {
    padding: 14rpx 24rpx;
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    display: -webkit-flex;
    border-bottom: 1rpx dashed #ccc;
}

.icon {
    width: 80rpx;
    text-align: center;
}

.icon>image {
    width: 37rpx;
    height: 36rpx;
    vertical-align: middle;
}

.res {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.res-num {
    width: 80rpx;
    font-size: 28rpx;
    color: #999;
    text-align: right;
    padding-right: 24rpx;
}

.history-title {
    height: 60rpx;
    line-height: 60rpx;
    padding: 16rpx 24rpx;
    border-top: 16rpx solid #f1f1f1;
    font-size: 30rpx;
    color: #999;
}

.history-res {
    padding-left: 30rpx;
    color: #999;
}

.clear {
    float: right;
}
