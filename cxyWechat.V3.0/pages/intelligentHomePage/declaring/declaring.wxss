page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

.bar-box {
    padding: 24rpx;
    height: 76rpx;
    border-bottom: 1rpx solid #e5e5e5;
    background-color: #fff;
    display: flex;
}

.bar-label {
    width: 22%;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
}

.kktxt {
    line-height: 38rpx;
}

.bar-right {
    flex: 1;
    padding: 0 20rpx;
    border: 1rpx solid #cdcdcd;
    position: relative;
}

.bar-right input {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #333;
}

/* 故障类型 */

.bar-type {
    width: 100%;
    height: 100%;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
    position: relative;
}

.drop-down::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 0 1rpx 1rpx 0;
    border-color: #999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 3%;
    margin-top: -15rpx;
}

.drop-up::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 1rpx 0 0 1rpx;
    border-color: #999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 3%;
    margin-top: -5rpx;
}

.bar-drop {
    z-index: 999;
    position: absolute;
    top: 76rpx;
    left: -1rpx;
    right: -1rpx;
    height: auto;
    border: 1rpx solid #cdcdcd;
    border-top: 0;
    background-color: #fff;
}

.bar-drop-item {
    padding: 10rpx 20rpx;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    color: #666;
    border-bottom: 1rpx dashed #cdcdcd;
}

/* 故障内容 */

.bar-content {
    height: auto;
}

.bar-textarea {
    padding: 10rpx 20rpx;
}

.bar-right textarea {
    width: 100%;
    height: 120rpx;
    font-size: 30rpx;
    color: #333;
}

.bar-textarea-len {
    text-align: right;
    font-size: 26rpx;
    color: #999;
}

/* 现场图片 */

.upload-img {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.upload-title {
    width: 100%;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 30rpx;
    color: #333;
}

.content-img {
    margin-top: 20rpx;
}

.content-img>image {
    width: 122rpx;
    height: 122rpx;
    vertical-align: middle;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
}

.image-box-item {
    float: left;
    width: 122rpx;
    height: 122rpx;
    margin-right: 16rpx;
    position: relative;
}

.image-box-item>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.clear-icon {
    position: absolute;
    top: -10rpx;
    right: -2rpx;
    width: 35rpx;
    height: 35rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
}

.clear-icon-item {
    margin-top: -50rpx;
}

.no-b {
    border: 0;
}

/* 底部按钮 */

.btm-button {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 99rpx;
    line-height: 99rpx;
    overflow: hidden;
    background-color: #fff;
    border-top: 1rpx solid #e5e5e5;
    display: flex;
}

.btm-button-item {
    flex: 1;
    text-align: center;
    font-size: 34rpx;
}

.btm-button2 {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    background-color: #399;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
}
