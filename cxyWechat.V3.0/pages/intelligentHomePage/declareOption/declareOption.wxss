page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    overflow: hidden;
}

.bar-box {
    padding: 24rpx;
    height: 76rpx;
    border-bottom: 1rpx solid #e5e5e5;
    background-color: #fff;
    display: flex;
}

.bar-label {
    width: 22%;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
}

.kktxt {
    line-height: 38rpx;
}

.bar-right {
    flex: 1;
    padding: 0 20rpx;
    border: 1rpx solid #cdcdcd;
    position: relative;
}

.bar-right input {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #333;
}

.picker {
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
}

/* 故障类型 */

.bar-type {
    width: 100%;
    height: 100%;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
    position: relative;
}

.drop-down::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 0 1rpx 1rpx 0;
    border-color: #999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 3%;
    margin-top: -15rpx;
}

.drop-up::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 1rpx 0 0 1rpx;
    border-color: #999;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 3%;
    margin-top: -5rpx;
}

.bar-drop {
    z-index: 999;
    position: absolute;
    top: 76rpx;
    left: -1rpx;
    right: -1rpx;
    height: auto;
    border: 1rpx solid #cdcdcd;
    border-top: 0;
    background-color: #fff;
}

.bar-drop-item {
    padding: 10rpx 20rpx;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    color: #666;
    border-bottom: 1rpx dashed #cdcdcd;
}

/* 底部按钮 */

.btm-button {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 99rpx;
    line-height: 99rpx;
    overflow: hidden;
    background-color: #fff;
    border-top: 1rpx solid #e5e5e5;
    display: flex;
}

.btm-button-item {
    flex: 1;
    text-align: center;
    font-size: 34rpx;
}

.no-b {
    border: 0;
}
