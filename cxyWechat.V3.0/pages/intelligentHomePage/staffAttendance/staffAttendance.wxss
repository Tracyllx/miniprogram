page {
    width: 100%;
    height: 100%;
}

/* 时间、员工选择 */

.option-bar {
    padding: 20rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
    display: flex;
}

.option-date {
    flex: 1;
    font-size: 28rpx;
    color: #399;
    letter-spacing: 2rpx;
    position: relative;
}

.option-staff {
    width: 58%;
    padding-left: 24rpx;
    font-size: 28rpx;
    color: #333;
    border: 1rpx solid #cdcdcd;
    position: relative;
}

.option-staff-list {
    z-index: 9;
    position: absolute;
    top: 66rpx;
    left: -1rpx;
    right: -4rpx;
    width: 100%;
    height: auto;
    max-height: 480rpx;
    overflow: hidden;
    background-color: #fff;
    border-bottom: 1rpx solid #cdcdcd;
}

.option-staff-item {
    padding: 10rpx 24rpx;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 28rpx;
    color: #333;
    border-left: 1rpx solid #cdcdcd;
    border-right: 1rpx solid #cdcdcd;
    border-bottom: 1rpx dashed #cdcdcd;
}

/* 列表标题 */

.table-th {
    padding: 0 20rpx;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    border-top: 1rpx solid #999;
    border-bottom: 1rpx solid #999;
    display: flex;
}

.table-tr {
    padding: 16rpx 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    border-bottom: 1rpx solid #cdcdcd;
    display: flex;
}

.table-td-zero {
    width: 20%;
}

.table-td-one {
    width: 20%;
}

.table-td-two {
    width: 20%;
}

.table-td-three {
    flex: 1;
}

.table-td-four {
    flex: 1;
}

.table-td-five {
    flex: 1;
}

/* 列表内容 */

.scroll-view {
    position: absolute;
    top: 190rpx;
    bottom: 0;
    width: 100%;
    overflow: hidden;
}

/* 选择日期弹窗 */

.date-model {
    z-index: 999;
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    overflow: hidden;
    background-color: rgba(0, 0, 0, .3);
}

.date-box {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: auto;
    max-height: 700rpx;
    background-color: #fff;
    border: 1rpx solid #999;
}

.date-item {
    padding: 16rpx 30rpx;
    height: 60rpx;
    display: flex;
}

.date-item-icon {
    width: 60rpx;
    text-align: center;
}

.date-item-txt {
    flex: 1;
    padding-left: 20rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #333;
    letter-spacing: 2rpx;
}

/* 公共 */

.no-bb {
    border-bottom: 0;
}

.color {
    color: #399;
}

.red {
    color: red;
}

.drop-down1::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 0 1rpx 1rpx 0;
    border-color: #399;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 20%;
    margin-top: -15rpx;
}

.drop-up1::after {
    content: " ";
    display: inline-block;
    height: 20rpx;
    width: 20rpx;
    border-width: 1rpx 0 0 1rpx;
    border-color: #399;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 20%;
    margin-top: -3rpx;
}

