page {
    width: 100%;
    height: 100%;
}

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
}

.price {
    color: #f60;
}

.list {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.list-item {
    padding: 30rpx 24rpx;
    height: auto;
    overflow: hidden;
    background-color: #fff;
}

.item-title {
    padding-bottom: 16rpx;
    font-size: 30rpx;
    color: #333;
}

.item-info {
    height: 72rpx;
    display: flex;
}

.item-number-txt {
    width: 150rpx;
    padding-top: 4rpx;
    font-size: 28rpx;
    color: #333;
}

.item-number-box {
    flex: 1;
    border: 1rpx solid #ccc;
    display: flex;
}

.item-number-option {
    width: 100rpx;
    padding-top: 4rpx;
    text-align: center;
    font-size: 40rpx;
    color: #333;
}

.item-number-input {
    flex: 1;
    border-left: 1rpx solid #ccc;
    border-right: 1rpx solid #ccc;
}

.item-number-input>input {
    width: 100%;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}

.item-price {
    width: 150rpx;
    padding-top: 4rpx;
    padding-left: 50rpx;
    font-size: 32rpx;
    color: #ff6600;
}

/* 日期 */

.choose-date {
    margin-top: 14rpx;
    padding: 16rpx 24rpx;
    height: 68rpx;
    background-color: #fff;
    display: flex;
}

.choose-date-txt {
    flex: 1;
    line-height: 68rpx;
    font-size: 30rpx;
    color: #333;
}

.choose-date-btn {
    height: 100%;
    overflow: hidden;
}

.choose-date-btn>view {
    padding: 10rpx 20rpx 0;
    height: 80%;
    margin: 0 auto;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    border-radius: 10rpx;
    background-color: #399;
}

.choose-date-btn>.disabled {
    color: #999;
    background-color: #fff;
    border: 1rpx solid #ccc;
}