page {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.scroll-view {
    width: 100%;
    height: 100%;
}

.item-info {
    padding: 36rpx 24rpx;
    height: 180rpx;
    overflow: hidden;
    display: flex;
}

.item-img {
    width: 260rpx;
    height: 100%;
    overflow: hidden;
}

.item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.item-txt {
    flex: 1;
    margin-left: 30rpx;
    height: 100%;
}

.item-name {
    height: 60%;
    font-size: 32rpx;
    color: #333;
}

.item-count {
    line-height: 60rpx;
    font-size: 30rpx;
    color: #333;
}

.item-price {
    float: right;
    font-size: 36rpx;
    color: #ff6600;
}

.msg {
    padding: 30rpx 24rpx;
    height: 260rpx;
    overflow: hidden;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}

.msg>textarea {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #333;
}

.tip {
    padding-top: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    color: #ff6600;
}

.btn {
    margin: 100rpx auto 0;
    width: 70%;
}