page {
    width: 100%;
    height: 100%;
}

/* 搜索框 */

.page-search {
    width: 100%;
    height: 68rpx;
    padding: 24rpx 0;
    background-color: #fff;
}

.page-search-box1 {
    width: 84%;
    height: 100%;
    padding: 0 3%;
    margin: 0 auto;
    text-align: center;
    border-radius: 10rpx;
    border: 1rpx solid #e5e5e5;
}

.page-search-icon {
    width: 37rpx;
    height: 36rpx;
    vertical-align: middle;
    margin-right: 12rpx;
}

.icon-margin {
    margin-top: 16rpx;
    margin-right: 20rpx;
}

.page-search-txt {
    font-size: 28rpx;
    color: #999;
}

.page-search-box2 {
    width: 84%;
    height: 100%;
    padding: 0 3%;
    margin: 0 auto;
    font-size: 28rpx;
    border-radius: 10rpx;
    border: 1rpx solid #e5e5e5;
    display: flex;
    display: -webkit-flex;
}

.page-search-input {
    flex: 1;
    height: 100%;
}

/* 导航 */

.nav-bar {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1rpx solid #e5e5e5;
    background-color: #fff;
    display: flex;
}

.nav-item {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    position: relative;
}

.nav-active {
    color: #399;
}

.nav-line {
    position: absolute;
    bottom: 0;
    left: 26%;
    display: block;
    width: 48%;
    height: 4rpx;
    background-color: #399;
}

/* 列表 */

.scroll-view {
    position: absolute;
    /* top: 216rpx; */
    top: 92rpx;
    bottom: 0;
    width: 100%;
}

/* 列表 */

.list-item {
    margin-bottom: 16rpx;
    padding: 16rpx 5%;
    height: auto;
    overflow: hidden;
    background-color: #fff;
}

.item-info {
    width: 100%;
    height: 160rpx;
    overflow: hidden;
    padding: 24rpx 0;
    display: flex;
    border-bottom: 1rpx solid #e5e5e5;
}

.no-bb {
    border: 0;
}

.item-img {
    width: 260rpx;
    height: 100%;
    overflow: hidden;
}

.item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.item-txt {
    flex: 1;
    margin-left: 30rpx;
    height: 100%;
}

.item-name {
    height: 60%;
    font-size: 28rpx;
    color: #333;
    padding-right: 90rpx;
    position: relative;
}

.item-status {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 26rpx;
    color: #399;
}

.item-count {
    line-height: 60rpx;
    font-size: 26rpx;
    color: #333;
}

.item-price {
    float: right;
    font-size: 30rpx;
    color: #ff6600;
}

/* 按钮 */

.item-btn {
    margin-top: 26rpx;
    width: 100%;
    height: auto;
    overflow: hidden;
    text-align: center;
}

.item-btn>button {
    width: 28%;
    margin: 0 12rpx;
}