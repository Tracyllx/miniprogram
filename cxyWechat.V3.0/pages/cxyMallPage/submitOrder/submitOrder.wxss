page {
    width: 100%;
    height: 100%;
}

/* 滚动区域 */

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
    background-color: #fff;
}

/* 地址 */

.address-msg {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
}

.address-name {
    line-height: 68rpx;
    font-size: 30rpx;
    color: #333;
}

.address-name>text {
    display: inline-block;
    width: 50%;
}

.address-info {
    line-height: 60rpx;
    font-size: 28rpx;
    color: #444;
}

/* 购物清单 */

.shopping-list {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
}

.list-title {
    font-size: 30rpx;
    color: #333;
}

.list-item {
    padding: 16rpx 0;
    height: 180rpx;
    display: flex;
}

.list-item-img {
    width: 260rpx;
    height: 100%;
}

.list-item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.list-item-info {
    flex: 1;
    margin-left: 30rpx;
    height: 100%;
}

.list-item-name {
    height: 70%;
    font-size: 32rpx;
    color: #333;
}

.list-item-count {
    line-height: 50rpx;
    font-size: 28rpx;
    color: #666;
}

.list-item-price {
    width: 100rpx;
    font-size: 32rpx;
    color: #ff6600;
    text-align: right;
}

/* 留言 */

.leaving-msg {
    padding: 16rpx 24rpx;
    height: auto;
    overflow: hidden;
}

.leaving-msg-title {
    font-size: 30rpx;
    color: #333;
}

.leaving-msg-textarea {
    width: 100%;
    height: 140rpx;
    overflow: hidden;
}

.leaving-msg-textarea>textarea {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #333;
}

.leaving-msg-tip {
    font-size: 26rpx;
    color: #999;
}

.order-info {
    width: 100%;
    overflow: hidden;
}

.order-info-item {
    padding: 16rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1rpx solid #e5e5e5;
}

.border-b {
    border-bottom: 1rpx solid #e5e5e5;
}

.border-t {
    border-top: 16rpx solid #eee;
}

.mt-0 {
    margin-top: 0;
}

.txt-r {
    text-align: right;
}

.fr {
    float: right;
}

.c-ff6600 {
    color: #ff6600;
}