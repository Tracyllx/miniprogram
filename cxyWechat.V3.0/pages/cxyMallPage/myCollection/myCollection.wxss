page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.scroll-view {
    width: 100%;
    height: 100%;
}

/* 列表 */

.list-item {
    margin-bottom: 16rpx;
    padding: 16rpx 5%;
    height: auto;
    overflow: hidden;
    background-color: #fff;
}

.item-info {
    width: 100%;
    height: 160rpx;
    overflow: hidden;
    padding: 24rpx 0;
    display: flex;
}

.item-img {
    width: 260rpx;
    height: 100%;
    overflow: hidden;
}

.item-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.item-txt {
    flex: 1;
    margin-left: 30rpx;
    height: 100%;
}

.item-name {
    height: 60%;
    font-size: 32rpx;
    color: #333;
}

.item-count {
    line-height: 60rpx;
    font-size: 30rpx;
    color: #333;
}

.item-price {
    float: right;
    font-size: 36rpx;
    color: #ff6600;
}

/* 按钮 */

.item-btn {
    padding-top: 16rpx;
    width: 100%;
    height: auto;
    overflow: hidden;
    text-align: center;
    border-top: 1rpx solid #e5e5e5;
}

.item-btn>button {
    width: 28%;
    margin: 0 12rpx;
}