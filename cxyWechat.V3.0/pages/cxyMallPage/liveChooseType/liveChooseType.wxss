page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.picker-choose-type {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
}

/* 日期选择 */

.picker-choose-date {
    background-color: #fff;
    width: 100%;
    margin-bottom: 16rpx;
}

.picker-choose-date-item {
    padding: 16rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
}

.b-btn {
    border-bottom: 1rpx solid #f1f1f1;
}

.picker-choose-date-txt {
    float: left;
    width: 220rpx;
    font-size: 26rpx;
    color: #333;
}

.picker-choose-date-time {
    float: left;
    width: 320rpx;
    font-size: 26rpx;
    color: #333;
    letter-spacing: 5rpx;
}

.picker-choose-date-icon {
    float: left;
    width: 100rpx;
}

.picker-choose-date-icon>image {
    width: 32rpx;
    height: 34rpx;
    vertical-align: middle;
}

/* 选择房型 */

.picker-list {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: #fff;
}

.picker-choose-type-item {
    margin: 0 24rpx;
    padding: 16rpx 0;
    border-top: 1rpx solid #f1f1f1;
    display: flex;
}

.picker-bottom-noborder {
    border: 0;
}

.picker-choose-type-check {
    width: 70rpx;
    height: auto;
}

.picker-choose-type-check>image {
    width: 50rpx;
    height: 50rpx;
    vertical-align: top;
    margin-top: 8rpx;
}

.picker-choose-type-info {
    flex: 1;
}

.picker-choose-type-name-price {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}

.picker-choose-type-name {
    float: left;
    font-size: 28rpx;
    color: #333;
}

.picker-choose-type-price {
    float: right;
    font-size: 30rpx;
    color: #f60;
}

.picker-choose-type-error {
    font-size: 26rpx;
    color: #ff6600;
}

.picker-choose-type-num {
    padding-left: 35%;
    width: auto;
    height: 100rpx;
    overflow: hidden;
}

.picker-choose-type-num-txt {
    float: left;
    width: 140rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 28rpx;
    color: #333;
}

.picker-choose-type-num-option {
    float: left;
    width: 80rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    font-size: 36rpx;
    color: #333;
    border: 1rpx solid #ccc;
}

.picker-choose-type-num-input {
    float: left;
    width: 100rpx;
    height: 68rpx;
    border: 1rpx solid #ccc;
    border-left: 0;
    border-right: 0;
}

.picker-choose-type-num-input>input {
    width: 100%;
    height: 100%;
    border: 0;
    outline: none;
    text-align: center;
    font-size: 28rpx;
    color: #333;
}

/* 底部操作 */

.picker-bottom {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 99rpx;
    border-top: 1rpx solid #f1f1f1;
    background-color: #fff;
    display: flex;
}

.picker-bottom-item {
    flex: 1;
    height: 100%;
    padding-top: 5rpx;
    text-align: center;
    font-size: 34rpx;
}

.picker-bottom-total {
    color: #f60;
}

.picker-bottom-left {
    color: #fff;
    background-color: #399;
}
