page {
    width: 100%;
    height: 100%;
}

/* 滚动区域 */

.scroll-view {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.history-title {
    padding: 16rpx 24rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1rpx solid #e5e5e5;
}

.history-btn {
    margin: 50rpx auto;
    width: 70%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: #399;
    border-radius: 10rpx;
}

.history-list {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.history-item {
    padding: 16rpx 24rpx;
    height: auto;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
}

.history-item-check {
    width: 100rpx;
    margin-top: 6rpx;
    text-align: center;
}

.history-item-info {
    flex: 1;
}

.history-item-txt {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #333;
}

.history-item-phone {
    margin-left: 60rpx;
}

.history-item-option {
    height: 68rpx;
    line-height: 68rpx;
    text-align: right;
    font-size: 26rpx;
    color: #399;
}

.history-item-option>view {
    display: inline-block;
    margin-left: 50rpx;
}

.edit {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -6rpx;
}

.del {
    width: 31rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -6rpx;
}

/* 新增弹窗 */

.add-outside {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
}

.add-box {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 90%;
    height: auto;
    background-color: #fff;
    border-radius: 14rpx;
    box-shadow: 0rpx 0rpx 16rpx 10rpx rgba(0, 0, 0, 0.15);
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
}

.add-box-title {
    margin: 0 8%;
    padding-top: 20rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center;
}

.add-box-info {
    width: 100%;
    height: auto;
}

.add-box-cell {
    padding: 20rpx 32rpx;
    height: 76rpx;
    display: flex;
}

.add-box-label {
    width: 120rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
}

.add-box-input {
    flex: 1;
    height: 100%;
    padding: 0 14rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.add-box-input>input {
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    color: #333;
    border: 0;
    outline: none;
}

.add-box-code {
    margin-left: 30rpx;
    width: 190rpx;
    margin-top: 14rpx;
    height: 62rpx;
    line-height: 62rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: #399;
    border-radius: 10rpx;
}

.add-box-btn {
    display: flex;
    position: relative;
}

.add-error {
    position: absolute;
    top: 0;
    width: 100%;
    text-align: center;
    font-size: 26rpx;
    color: red;
}

.add-box-btn-item {
    flex: 1;
    margin: 56rpx 10% 35rpx;
    height: 68rpx;
    line-height: 68rpx;
    font-size: 30rpx;
    text-align: center;
    border-radius: 10rpx;
}

.add-btn-cencel {
    color: #333;
    border: 1rpx solid #ccc;
}

.add-btn-save {
    color: #399;
    border: 1rpx solid #399;
}
