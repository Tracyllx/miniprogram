page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.myContainer {
    width: 100%;
    height: 100%;
}

.bangding {
    width: 100%;
    height: 152rpx;
    margin-top: 40rpx;
}

/* 输入手机号 */

.phone_input {
    width: 86%;
    height: 75rpx;
    margin-left: 3%;
    margin-right: 3%;
    padding-left: 2%;
    padding-right: 6%;
    border-bottom: 1px solid #dcdcdc;
    /* border: 1px solid  */
}

/* 输入验证码 */

.check_num {
    width: 90%;
    height: 75rpx;
    margin-left: 3%;
    margin-right: 3%;
    padding-left: 2%;
    padding-right: 2%;
    border-bottom: 1px solid #dcdcdc;
}

/* 手机图标 */

.phone_icon {
    width: 25rpx;
    height: 40rpx;
    margin-top: 25rpx;
    margin-left: 5rpx;
    float: left;
}

/* 输入手机框 */

.input_area1 {
    width: 85%;
    /* height: 40rpx; */
    height: 75rpx;
    margin-left: 25rpx;
    font-size: 28rpx;
    margin-top: 10rpx;
    float: left;
}

/* 输入验证码框 */

.input_area2 {
    width: 55%;
    /* height: 40rpx; */
    height: 75rpx;
    margin-left: 25rpx;
    font-size: 28rpx;
    margin-top: 10rpx;
    float: left;
}

/* 取消图标 */

.cancel_icon {
    float: right;
    margin-top: 35rpx;
}

/* 发送验证码 */

.send_num {
    float: right;
    font-size: 24rpx;
    color: #01827d;
    height: 90rpx;
    line-height: 90rpx;
}

/* 第二部分：按钮 */

.button {
    width: 100%;
    height: 60rpx;
    margin-top: 120rpx;
}

.finish {
    width: 50%;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #01827d;
    border-radius: 30rpx;
    color: #fff;
    font-size: 28rpx;
}

/* -------------------------------------------- */

/* 第一部分：头像 */

.index_first {
    width: 100%;
    height: 180rpx;
    margin-top: 90rpx;
    text-align: center;
}

.logo_img {
    width: 180rpx;
    height: 180rpx;
    background-color: #fff;
    border-radius: 90rpx;
}

/* 第二部分：手机号 */

.index_second {
    width: 100%;
    height: 70rpx;
    margin-top: 30rpx;
    text-align: center;
}

.phone_num {
    line-height: 70rpx;
    color: #999;
    font-size: 30rpx;
    letter-spacing: 5rpx;
}

/* 第三部分：解除绑定 */

.index_third {
    width: 100%;
    height: 50rpx;
    margin-top: 20rpx;
    text-align: center;
}

.text {
    font-size: 25rpx;
    line-height: 50rpx;
    color: #01827d;
    letter-spacing: 3rpx;
}

/* 第四部分：是否解除绑定 */

.background {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: rgba(0, 0, 0, 0.1);
}

.index_fourth {
    width: 400rpx;
    height: 150rpx;
    border-radius: 15rpx;
    position: absolute;
    top: 380rpx;
    left: 50%;
    margin-left: -200rpx;
    background-color: #fff;
}

/* 确定要解除绑定吗？ */

.text_one {
    font-size: 28rpx;
    color: #999;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    letter-spacing: 2rpx;
}

/* 取消 */

.no, .yes {
    width: 50%;
    font-size: 28rpx;
    color: #01827d;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    letter-spacing: 2rpx;
    float: left;
}
