page {
    width: 100%;
    height: 100%;
}

/* 交易平台-交易数弹窗样式 */

.kkModule-mask {
    z-index: 9;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
}

.kkModule-box {
    z-index: 9;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 86%;
    height: 800rpx;
    overflow: hidden;
    background: #fff;
}

.table-body {
    height: 720rpx;
}

.table-th, .table-trm {
    width: 94%;
    height: 75rpx;
    padding: 5rpx 3%;
    overflow: hidden;
    border-bottom: 1px solid #cdcdcd;
}

.table-th {
    font-weight: bold;
}

.table-td-one, .table-td-two, .table-td-three {
    float: left;
    width: 54%;
    height: 100%;
    padding: 0 1%;
    font-size: 24rpx;
    overflow: hidden;
}

.table-td-one {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.table-th>.table-td-one {
    text-align: center;
}

.table-td-two {
    width: 16.5%;
    text-align: center;
}

.table-td-three {
    width: 22.5%;
    text-align: center;
}

/* 选择时间 */

.select-time {
    width: 100%;
    height: 8%;
}

/* 展示筛选条件 */

.select-data {
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
}

/* 展示每一个筛选条件 */

.select-day, .select-week, .select-month {
    flex: 1;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    position: relative;
    padding-top: 4rpx;
    overflow: hidden;
}

.select-menu {
    flex: 0 0 260rpx;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    position: relative;
    padding-top: 4rpx;
    padding-right: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.select-menu-arrow {
    position: absolute;
    right: 10rpx;
    top: 50%;
    transform: translate(0, -50%);
    width: 22.4rpx;
    height: 12.6rpx;
    vertical-align: middle;
    padding: 6rpx;
    border-radius: 8rpx;
}

.select-menu-mask {
    z-index: 7;
    position: absolute;
    top: 8%;
    width: 100%;
    height: 92%;
    background: rgba(0, 0, 0, 0);
}

.select-menu-box {
    z-index: 8;
    position: absolute;
    top: 8%;
    right: 0;
    width: 298rpx;
    height: 440rpx;
    background: #fff;
    overflow: hidden;
    border-left: 1rpx solid #cdcdcd;
    box-shadow: -1rpx 2rpx 2rpx #999; 
}

.kktip {
    font-size: 30rpx;
    line-height: 65rpx;
    padding: 0 16rpx;
    border-bottom: 1rpx solid #cdcdcd;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.kktip-active {
     color: #399; 
}

/* 展示分割线 */

.show-line {
    position: absolute;
    top: 27%;
    right: 0;
    width: 1px;
    height: 50%;
    background: #cdcdcd;
}

/* 让筛选文字居中 */

.select::after {
    width: 0;
    height: 100%;
    display: inline-block;
    vertical-align: middle;
    content: "";
}

/* 展示数据部分 */

.show-data {
    width: 100%;
    height: 74%;
    overflow: hidden;
}

.data-one-two, .data-three-four {
    width: 100%;
    height: 100%;
}

/* 展示数据列表的头部 */

.data-title {
    width: 100%;
    height: 8%;
    margin-top: 1%;
    overflow: hidden;
    border-top: 1px #cdcdcd solid;
    border-bottom: 1px solid #cdcdcd;
}

.title {
    width: 24.5%;
    height: 100%;
    float: left;
    font-size: 27rpx;
    text-align: center;
    border-right: 1px solid #cdcdcd;
}

/* 展示滑动列表 */

.scroller {
    width: 100%;
    height: 83%;
}

.all-count {
    width: 100%;
    height: 8%;
    border-top: 1px solid #cdcdcd;
    overflow: hidden;
}

/* 展示每一行的数据 */

.table-tr {
    width: 100%;
    height: 80rpx;
    border-bottom: 1px solid #cdcdcd;
    /* overflow: hidden; */
    position: relative;
}

/* 每一个小数据 */

.tr-data {
    float: left;
    height: 100%;
    width: 24.5%;
    font-size: 27rpx;
    text-align: center;
    border-right: 1px solid #cdcdcd;
}

/* 每一个小数据的气泡 */

.tr-data-teamBubble {
    z-index: 2;
    position: absolute;
    left: 68%;
    top: -3%;
    width: 180rpx;
    padding: 8rpx 16rpx;
    font-size: 20rpx;
    line-height: 40rpx;
    color: #fff;
    border-radius: 10rpx;
    /* background: #9eea6a; */
    background: #399;
}

.tr-data-teamBubble-h52 {
    height: 70rpx;
    line-height: 70rpx;
}

/* 气泡的三角形 */

.tr-data-teamBubble-triangle {
    z-index: 2;
    position: absolute;
    left: -8.6%;
    top: 18%;
    width: 0;
    height: 0;
    border-width: 18rpx 20rpx 18rpx 0;
    border-style: solid;
    border-color: transparent #399 transparent transparent;
}

/* 没有更多数据了 */

.noneData {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #01847d;
    text-align: center;
    font-size: 28rpx;
}

/* 绅悦及直通车数据统计部分 */

/* 标题 */

.title-two {
    width: 33%;
    height: 100%;
    float: left;
    font-size: 28rpx;
    text-align: center;
    border-right: 1px solid #cdcdcd;
}

/* 数据部分 */

.tr-data-two {
    float: left;
    height: 100%;
    width: 33%;
    font-size: 28rpx;
    text-align: center;
    border-right: 1px solid #cdcdcd;
}

/* 底部 */

.footers {
    width: 100%;
    height: 18%;
    overflow: hidden;
}

/* 选择时间的横条 */

.select-all-day {
    width: 96.2%;
    height: 42%;
    padding: 0 2%;
    background: #eee;
}

/* 每一个时间的选择 */

.day {
    margin-right: 4%;
    width: 28%;
    height: 70%;
    float: left;
    margin-top: 2.2%;
    border-radius: 12rpx;
    font-size: 30rpx;
    background: #fff;
    text-align: center;
}

/* 第十天距离左边多些 */

.ten-day {
    margin-left: 4%;
}

/* 图片的设置 */

.chooseImg {
    width: 32rpx;
    height: 32rpx;
    margin-left: 20rpx;
    margin-top: -4rpx;
    vertical-align: middle;
}

/* 展示选择筛选哪个条件 */

.select-type {
    width: 100%;
    height: 58%;
}

/* 展示每一个格子，看选游客统计还是充电数据 */

.data-types {
    float: left;
    width: 25%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

/* 展示格子包含内容和图片 */

.types {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 90%;
    transform: translate(-50%, -50%);
}

/* 展示图片 */

.types>image {
    display: block;
    width: 52rpx;
    height: 52rpx;
    margin: 0 auto;
    margin-top: 4rpx;
}

/* 字体的大小 */

.font {
    font-size: 27rpx;
    text-align: center;
}

/* 展示选中的颜色 */

.color {
    color: #4d93ca;
    font-weight: bold;
}

.active-color {
    color: #4d93ca;
}

.nonedisplay {
    display: none;
}

.noneborder {
    border: none;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
