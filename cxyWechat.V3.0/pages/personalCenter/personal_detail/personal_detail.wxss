
page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.myContainer {
    width: 100%;
    height: 100%;
}

.image {
    width: 100%;
    background-color: #fff;
}

.border_input {
    height: 90rpx;
    width: 90%;
    margin-left: 5%;
    border-bottom: 1px solid #dcdcdc;
}

.last_input {
    height: 90rpx;
    width: 90%;
    margin-left: 5%;
}

.touxiang, .nickname, .bangding, .qianming {
    color: #777;
    font-size: 30rpx;
    line-height: 90rpx;
    float: left;
}

.logo_img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    float: right;
    margin-top: 15rpx;
}

.nicheng, .if_bangding, .contents {
    color: #999;
    font-size: 28rpx;
    line-height: 90rpx;
    float: right;
}

.contents {
    width: 35%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    text-align: right;
}

.arrow-icon {
    width: 20rpx;
    height: 45rpx;
    vertical-align: middle;
    margin-left: 10rpx;
    margin-top: -6rpx;
}
