page {
    width: 100%;
    height: 100%;
}

.activities {
    width: 100%;
    height: 100%;
}

.bg {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.bag, .txt {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 86%;
    height: 90%;
}

.bag>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.txt {
    height: 50%;
    padding-left: 4%;
    /* background: rgba(222, 222, 222, .6); */
}

.txt-box {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.txt-tag1 {
    font-size: 46rpx;
    color: #fff;
    text-align: center;
    margin-top: 12%;
}

/* 领取标题 */

.get-txt, .success-txt {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 46rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    top: 0;
    width: 100%;
    transform: translate(0%, -2%);
}

.success-txt {
    top: 13%;
    transform: translate(0%, 0%);
}

/* 未拆开时的红包标题 */

.get-title {
    height: 68rpx;
    line-height: 68rpx;
    font-size: 50rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    top: 45%;
    width: 100%;
    transform: translate(0%, -50%);
}

/* 领取成功的金额显示 */

.success-money {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 60rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    top: 38%;
    width: 100%;
    transform: translate(0%, -50%);
}

.success-money-num {
    font-size: 72rpx;
}

/* 领取成功的金额标题 */

.success-title {
    font-size: 26rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    top: 52%;
    width: 100%;
    transform: translate(0%, -50%);
}

/* 领取成功的红包内容 view */

.success-box {
    color: #fff;
    width: 67%;
    height: 30%;
    margin-left: 17%;
    position: absolute;
    top: 52%;
    transform: translate(0%, -50%);
}

.success-box-t {
    height: 70%;
    display: flex;
}

.success-box-num {
    flex: 0 0 36%;
    font-size: 36rpx;
    text-align: center;
    padding-top: 3%;
}

.success-box-num-num {
    font-size: 46rpx;
}

.success-box-title {
    flex: 1;
    font-size: 22rpx;
    padding-top: 6%;
    padding-left: 2%;
}

.success-box-b {
    height: 30%;
    padding-left: 6%;
    font-size: 20rpx;
}

/* 红包操作按钮 */

.bottom-btn {
    height: 90rpx;
    line-height: 90rpx;
    font-weight: bold;
    font-size: 46rpx;
    color: #e42e3b;
    text-align: center;
    position: absolute;
    bottom: 14.5%;
    width: 100%;
    transform: translate(0%, 0%);
}

/* 优惠券 */

.bag2 {
    top: 45%;
    width: 92%;
    height: 20%;
}

.txt2 {
    top: 45%;
    width: 92%;
    height: 20%;
    padding: 0;
}

.txt2-box {
    display: flex;
}

.txt2-box-l {
    flex: 1;
    padding: 20rpx 30rpx;
}

.txt2-box-r {
    flex: 0 0 280rpx;
}

.txt2-money {
    font-weight: bold;
    font-size: 40rpx;
    color: #ef6373;
    text-align: center;
}

.txt2-money-num {
    font-size: 60rpx;
}

.txt2-title {
    line-height: 50rpx;
    font-size: 24rpx;
    color: #ef6373;
    text-align: center;
}

.limit-time {
    line-height: 50rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

/* 关闭页面 */

.close {
    position: absolute;
    bottom: 12%;
    left: 50%;
    transform: translate(-50%, 0%);
    width: 90%;
    height: 90rpx;
    text-align: center;
}

.close>image {
    width: 90rpx;
    height: 90rpx;
    vertical-align: middle;
}

/* 活动结束 */

.is-null-red {
    color: rgba(228, 46, 59, 0.5);
}

.is-null {
    border: 1rpx dashed #cdcdcd;
    text-align: center;
    font-size: 38rpx;
    color: #cdcdcd;
}

.is-null::after {
    width: 0;
    height: 100%;
    display: inline-block;
    content: "";
    vertical-align: middle;
}
