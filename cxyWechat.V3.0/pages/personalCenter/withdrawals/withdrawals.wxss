page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.withdrawals {
    width: 96%;
    height: auto;
    margin: 20rpx auto;
    overflow: hidden;
    background-color: #fff;
}

.title {
    font-size: 30rpx;
    color: #000;
    padding: 30rpx 5%;
}

.input {
    height: 100rpx;
    margin: 0 5%;
    padding: 10rpx 0;
    display: flex;
    border-bottom: 1rpx solid #cdcdcd;
}

.input-tip {
    flex: 0 0 80rpx;
    height: 100%;
    line-height: 100rpx;
    font-size: 80rpx;
    font-weight: bold;
    color: #333;
}

.input-box {
    flex: 1;
    height: 100%;
}

input {
    width: 100%;
    height: 100%;
    min-height: 100%;
    font-size: 100rpx;
    font-weight: bold;
    color: #333;
}

.plhClass {
    font-size: 38rpx;
    font-weight: normal;
    color: #cdcdcd;
}

.tip1 {
    padding-top: 0;
}

.tip2 {
    padding: 30rpx 5%;
    font-size: 28rpx;
    color: #999;
}

.color {
    color: #01827d;
}

#btn {
    width: 80%;
    margin: 30rpx auto;
    background-color: #01827d;
}


/* ============================================= 等待中 ================================================ */

.progress {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.progress-content {
    margin: 0 5% 50rpx;
    padding-top: 60rpx;
    border-bottom: 1rpx solid #cdcdcd;
}

.content-box {
    margin: 0 40rpx 60rpx;
    padding-left: 40rpx;
    border-left: 1rpx dashed #cdcdcd;
    position: relative;
}

.circle0 {
    width: 30rpx;
    height: 30rpx;
    background-color: #349A99;
    border-radius: 100%;
    position: absolute;
    top: 0;
    left: -15rpx;
}

.circle1 {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    left: -25rpx;
    transform: translate(0, -50%);
}

.circle2 {
    width: 30rpx;
    height: 30rpx;
    background-color: #D1D1D1;
    border-radius: 100%;
    position: absolute;
    bottom: 0;
    left: -15rpx;
}

.content-one {
    padding-bottom: 40rpx;
    font-size: 30rpx;
    color: #999;
}

.content-two {
    padding: 40rpx 0;
    font-size: 30rpx;
    color: #000;
}

.content-three {
    padding-top: 40rpx;
    font-size: 30rpx;
    color: #d1d1d1;
}

.title2 {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #999;
    padding: 0 5%;
}

.tip3 {
    float: right;
    color: #000;
}

#finish {
    width: 50%;
    position: absolute;
    bottom: 160rpx;
    left: 25%;
    background-color: #fff;
    color: #01827d;
    border: 1rpx solid #01827d;
}