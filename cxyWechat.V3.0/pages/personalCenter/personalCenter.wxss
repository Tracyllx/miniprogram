page {
    height: 100%;
    width: 100%;
    overflow: hidden;
    background-color: #eee;
}

.myContainer {
    width: 100%;
    height: 100%;
    color: #333;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.nonedisplay {
    display: none;
}

.my-contents {
    position: absolute;
    top: 0;
    bottom: 100rpx;
    width: 100%;
}

.my-information {
    width: 100%;
    overflow: hidden;
    background: #fff;
}

.my-details {
    width: 100%;
    height: 420rpx;
    position: relative;
}

.my-bg {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: #e3e3e3;
}

.my-bg>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.my-box {
    position: absolute;
    top: 12%;
    left: 0;
    bottom: 0;
    width: 100%;
    overflow: hidden;
}

/* 头像 */

.my-head-img {
    margin: 0 auto;
    width: 180rpx;
    height: 180rpx;
    overflow: hidden;
    border-radius: 100%;
    background: #f1f1f1;
}

.my-head-img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.my-nickname, .my-desc {
    padding-top: 20rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}

.my-desc {
    padding-top: 0;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
}

/* 消息 */

.my-message {
    float: right;
    width: 100rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: right;
    padding-right: 10%;
    position: relative;
}

.weui-badge {
    background-color: #ff3a05;
    color: #fff;
    width: 38rpx;
    height: 38rpx;
    padding: 5rpx;
    line-height: 38rpx;
    border-radius: 38rpx;
    position: absolute;
    top: 0;
    right: 20%;
}

/* 余额、红包、优惠券 */

.my-property {
    width: 100%;
    /* height: 120rpx; */
    display: flex;
}

.my-property-item {
    flex: 1;
    padding: 20rpx 10rpx;
    position: relative;
}

.item-txt {
    line-height: 40rpx;
    font-size: 30rpx;
    text-align: center;
}

.item-line {
    position: absolute;
    top: 45rpx;
    right: 0;
    width: 1px;
    height: 30rpx;
    background: #cdcdcd;
}

/* 列表 */

.my-options {
    width: 100%;
    overflow: hidden;
}

.options-item {
    padding: 10rpx 3%;
    height: 80rpx;
    display: flex;
    background: #fff;
    border-bottom: 1rpx solid #f1f1f1;
}

.mt8 {
    margin-top: 8rpx;
}

.mb18 {
    margin-bottom: 18rpx;
}

.border0 {
    border: 0;
}

.icon-name {
    flex: 0 0 80rpx;
    height: 100%;
    text-align: center;
}

.icon {
    flex: 0 0 80rpx;
    height: 100%;
    text-align: center;
}

.icon-name>image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.icon>image {
    width: 50rpx;
    height: 45rpx;
    vertical-align: middle;
}

.title {
    flex: 1;
    height: 100%;
    line-height: 80rpx;
    font-size: 30rpx;
    padding-left: 15rpx;
}

.nameVald_no {
    float: right;
    margin-right: 10rpx;
}

.nameVald_yes {
    float: right;
    margin-right: 10rpx;
    color: #399;
}

.arrow {
    flex: 0 0 30rpx;
    height: 100%;
    text-align: center;
}

.arrow>image {
    width: 20rpx;
    height: 45rpx;
    vertical-align: middle;
}
