page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

/* 发送 */

.send {
    width: 95%;
    height: 60rpx;
    border-radius: 15rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    background-color: #01827d;
    margin-left: 2.5%;
    margin-top: 30rpx;
}

.text_area {
    width: 94%;
    height: 94%;
    background-color: #fff;
    overflow: hidden;
    padding: 3%;
}

.text_tips {
    text-align: right;
    color: #b2b2b2;
    font-size: 30rpx;
}

.text_contents {
    width: 100%;
    height: 120rpx;
    font-size: 30rpx;
}

/* 点击加号加图片的样式 */

.click {
    width: 150rpx;
    height: 150rpx;
    text-align: center;
    font-size: 62rpx;
    line-height: 150rpx;
    color: #ccc;
    float: left;
    border: 1px #ccc solid;
}

/* 上传图片的最大view设置 */

.upload_image {
    width: 100%;
    height: 450rpx;
}

/* 上传图片的大小 */

.upload_image>image {
    display: block;
    float: left;
    width: 150rpx;
    height: 150rpx;
}

/* 图片隐藏 */

.upload_image>.noneplay {
    display: none;
}

/* 文本域高度设置 */

.weui-textarea {
    height: 120rpx;
}

/* 展示文本超出200的tip */

.showtip {
    margin-right: 40rpx;
    color: red;
}

/* 隐藏文本域 */

.nonedisplay {
    display: none;
}
