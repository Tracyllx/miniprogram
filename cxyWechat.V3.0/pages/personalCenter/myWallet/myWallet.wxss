page {
    width: 100%;
    height: 100%;
    background: #fff;
    color: #333;
}

.myWallet {
    width: 90%;
    height: 100%;
    padding: 0 5%;
}

.img {
    width: 360rpx;
    height: 276rpx;
    margin: 0 auto;
    padding: 120rpx 0 40rpx;
}

.img>image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.tc {
    text-align: center;
}

.txt {
    font-size: 36rpx;
}

.num {
    font-size: 50rpx;
    font-weight: bold;
}

.small {
    font-size: 24rpx;
    color: #01847D;
    padding-top: 20rpx;
}

.bottom {
    text-align: right;
    font-size: 28rpx;
    color: #01847D;
    position: absolute;
    top: 10rpx;
    left: 0;
    right: 0;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 5%;
    padding-right: 5%;
}

button {
    margin-top: 30rpx;
}

.module-mask {
    z-index: 9;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
}

.module-box {
    z-index: 10;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 72%;
    padding: 3% 4%;
    overflow: hidden;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 30rpx 10rpx rgba(0, 0, 0, .1);
}

.input-bar {
    display: flex;
    padding: 10rpx 0;
    height: 60rpx;
}

.input-lable {
    flex: 0 0 150rpx;
    font-size: 30rpx;
    height: 100%;
}

.input-box  {
    flex: 1;
    font-size: 30rpx;
    height: 100%;
    min-height: 60rpx;
    padding-left: 10rpx;
    outline: none;
    border-radius: 10rpx;
    border: 1rpx solid #cdcdcd;
}

.input-mt15 {
    margin-top: 15rpx;
}

.input-btn {
    width: 80%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background: #01847D;
}

.input-btn-dis {
    color: #333;
    background: #f8f8f8;
}

.input-error {
    height: 50rpx;
    font-size: 24rpx;
    line-height: 50rpx;
    text-align: center;
    color: red;
}

#withdrawals {
    color: rgba(0, 0, 0, .5);
}