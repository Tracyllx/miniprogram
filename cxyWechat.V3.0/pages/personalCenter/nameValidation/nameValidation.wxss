page {
    width: 100%;
    height: 100%;
    background: #eee;
    color: #333;
}

.nameValidation {
    width: 100%;
    height: 100%;
    position: relative;
}

.title {
    padding: 4% 5%;
    font-size: 30rpx;
}

.input-box {
    height: 80rpx;
    padding: 3% 5%;
    background: #fff;
    border-bottom: 1rpx solid #cdcdcd;
}

.input-box-noBorder {
    border-bottom: 0;
}

.input-label {
    float: left;
    width: 24%;
    height: 100%;
    font-size: 30rpx;
    text-align: center;
    padding-top: 6rpx;
}

.input-bar {
    float: left;
    width: 76%;
    height: 100%;
    font-size: 30rpx;
    padding-top: 4rpx;
}

.phClass {
    color: #999;
    font-size: 30rpx;
}

.input-label::after {
    content: '';
    width: 0%;
    height: 100%;
    display: inline-block;
    vertical-align: middle;
}

.error-msg {
    font-size: 30rpx;
    color: red;
    text-align: center;
    line-height: 80rpx;
}

.c9 {
    color: #999;
}

.bg-cd {
    background-color: #cdcdcd;
}

button {
    width: 60%;
    margin: 0 auto;
    color: #fff;
    background-color: #01847D;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}